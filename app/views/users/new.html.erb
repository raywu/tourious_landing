<div class="mailing_list">
	<h1>Welcome to Tourious!</h1>

	<iframe width="400" height="233" src="http://www.youtube.com/embed/TzZYYPTk4Ys" frameborder="0" allowfullscreen></iframe>
	
	<%= form_for @user, :url => { :action => "create" } do |u| %>
		<h3>Join us for our launch!</h3>
  		<div class="left short_input">
			<%= u.label :firstname %>
  			<%= u.text_field :firstname %>
		</div>
  		<div class="right short_input">
			<%= u.label :lastname %>
  			<%= u.text_field :lastname %>
		</div>
  		<div class="left long_input">
			<%= u.label :email %>
  			<%= u.email_field :email %>
	  		<p><%= u.submit "Yay!" %></p>
		</div>
	<% end %>
</div>
